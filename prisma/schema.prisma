generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Store {
  id                      String       @id @default(cuid())
  name                    String
  location                String?
  currency                String       @default("PHP")
  businessType            String       @default("GENERAL") // SARI_SARI, FOOD_AND_BEVERAGE, GENERAL
  serviceChargeEnabled    Boolean      @default(false)
  serviceChargeLabel      String       @default("Service Charge")
  serviceChargePercentage Float        @default(0)
  users                   User[]
  products                Product[]
  orders                  Order[]
  categories              Category[]
  shifts                  Shift[]
  createdAt               DateTime     @default(now())
  updatedAt               DateTime     @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  pin           String?   // Keep for quick access if needed
  role          String    @default("STAFF") // ADMIN, MANAGER, STAFF
  storeId       String?   // Optional for now to allow initial setup
  store         Store?    @relation(fields: [storeId], references: [id])
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  shifts        Shift[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id        String    @id @default(cuid())
  name      String
  storeId   String
  store     Store     @relation(fields: [storeId], references: [id])
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id           String          @id @default(cuid())
  name         String
  price        Float
  costPrice    Float           @default(0)
  stock        Int
  categoryId   String
  category     Category        @relation(fields: [categoryId], references: [id])
  storeId      String
  store        Store           @relation(fields: [storeId], references: [id])
  orderItems   OrderItem[]
  packageItems PackageItem[]
  forecasts    ForecastData[]
  priceHistory PriceHistory[]
  costPriceHistory CostPriceHistory[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

model Order {
  id               String      @id @default(cuid())
  receiptNumber    Int?        // Per-store sequential number logic needed later
  total            Float
  amountPaid       Float?
  status           String      @default("COMPLETED")
  paymentMethod    String      @default("CASH")
  paymentReference String?
  discountType     String      @default("NONE")
  discountAmount   Float       @default(0)
  userId           String?
  user             User?       @relation(fields: [userId], references: [id])
  storeId          String
  store            Store       @relation(fields: [storeId], references: [id])
  shiftId          String?
  shift            Shift?      @relation(fields: [shiftId], references: [id])
  items            OrderItem[]
  deliveryOrders   DeliveryOrder[]
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}

model Package {
  id          String        @id @default(cuid())
  name        String
  description String?
  price       Float
  items       PackageItem[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model PackageItem {
  id        String  @id @default(cuid())
  packageId String
  package   Package @relation(fields: [packageId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
}

model IntegrationConfig {
  id        String   @id @default(cuid())
  provider  String   @unique
  type      String
  enabled   Boolean  @default(false)
  mode      String   @default("sandbox")
  config    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DeliveryOrder {
  id              String   @id @default(cuid())
  orderId         String
  order           Order    @relation(fields: [orderId], references: [id])
  platform        String
  externalOrderId String?
  status          String   @default("pending")
  deliveryFee     Float?
  platformData    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model SalesAnalytics {
  id            String   @id @default(cuid())
  date          DateTime
  totalRevenue  Float
  totalOrders   Int
  avgOrderValue Float
  topProducts   String
  peakHour      Int?
  createdAt     DateTime @default(now())
}

model ForecastData {
  id              String   @id @default(cuid())
  productId       String
  product         Product  @relation(fields: [productId], references: [id])
  forecastDate    DateTime
  predictedSales  Int
  confidence      Float
  recommendations String?
  createdAt       DateTime @default(now())
}

model PriceHistory {
  id            String    @id @default(cuid())
  productId     String
  product       Product   @relation(fields: [productId], references: [id])
  originalPrice Float
  adjustedPrice Float
  reason        String
  appliedAt     DateTime  @default(now())
  revertedAt    DateTime?
}

model CustomerInsight {
  id                 String   @id @default(cuid())
  period             String
  periodDate         DateTime
  totalCustomers     Int
  returningCustomers Int
  avgPurchaseValue   Float
  topCombinations    String
  createdAt          DateTime @default(now())
}

model CostPriceHistory {
  id         String   @id @default(cuid())
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  costPrice  Float
  recordedAt DateTime @default(now())
  source     String   @default("MANUAL")
  notes      String?
}

model Shift {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  storeId      String
  store        Store    @relation(fields: [storeId], references: [id])
  startCash    Float
  endCash      Float?
  expectedCash Float?
  variance     Float?
  status       String   @default("OPEN") // OPEN, CLOSED
  startTime    DateTime @default(now())
  endTime      DateTime?
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  orders       Order[]
}
